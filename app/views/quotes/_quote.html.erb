<li id="<%= dom_id(quote) %>" class="quote-item mb-4">
  <%= link_to book_path(quote.book, format: :turbo_stream),
              data: { turbo_frame: "book_modal" },
              class: "quote-link text-decoration-none" do %>
    <div class="card quote-card shadow-sm">
      <div class="card-body d-flex justify-content-center align-items-center">
        <p class="quote-body mb-0">
          <%= simple_format(h(quote.body), {}, wrapper_tag: "span") %>
        </p>
      </div>
    </div>
  <% end %>
</li>
