<h2>書籍の追加</h2>

<!-- ISBN から検索 -->
<section style="margin-bottom: 2rem;">
  <h3>ISBNで検索</h3>
  <%= form_with url: create_by_isbn_books_path, method: :post, local: true do |form| %>
    <div>
      <%= form.label :isbn, "ISBNコード（13桁）" %><br>
      <%= form.text_field :isbn, placeholder: "例: 9784049122205" %>
    </div>
    <div style="margin-top: 1rem;">
      <%= form.submit "APIから検索して追加", class: "btn" %>
    </div>
  <% end %>
</section>

<!-- 手動登録（MVP向け） -->
<section>
  <h3>手動登録</h3>
  <%= form_with model: @book, local: true do |form| %>
    <div>
      <%= form.label :title, "書名（必須）" %><br>
      <%= form.text_field :title, placeholder: "例: 吾輩は猫である" %>
    </div>

    <div style="margin-top: 1rem;">
      <%= form.submit "書籍を登録", class: "btn" %>
    </div>
  <% end %>
</section>
