<div class="container my-4">
  <h1 class="mb-4">Step 1: 書籍を検索</h1>

  <%= form_with url: search_books_path, method: :get, local: true do |f| %>
    <div class="mb-3">
      <%= f.label :q, "タイトル・著者・ISBN", class: "form-label" %>
      <%= f.text_field :q, value: @query, class: "form-control", placeholder: "検索ワードを入力" %>
    </div>
    <%= f.submit "検索", class: "btn btn-primary" %>
  <% end %>

  <% if @query.present? %>
    <hr>
    <h2 class="h5">検索結果</h2>

    <% if @results.any? %>
      <div class="row">
        <% @results.each do |volume| %>
          <% info = volume["volumeInfo"] || {} %>
          <% isbn_13 = info["industryIdentifiers"]&.find { |id| id["type"] == "ISBN_13" }&.dig("identifier") %>
          <% next unless isbn_13 %>

          <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
              <% if (img = info.dig("imageLinks", "thumbnail")) %>
                <img src="<%= img %>" class="card-img-top" alt="<%= info["title"] %>">
              <% end %>
              <div class="card-body">
                <h5 class="card-title"><%= info["title"] %></h5>
                <p class="card-text small">
                  <%= info["authors"]&.join(", ") %><br>
                  <%= info["publisher"] %><br>
                  <%= info["publishedDate"] %>
                </p>
                <%= button_to "この本を選ぶ", create_by_isbn_books_path(isbn: isbn_13),
                              method: :post,
                              class: "btn btn-sm btn-success" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-muted mt-3">「<%= @query %>」に一致する書籍は見つかりませんでした。</p>
      <%= link_to "手動で登録する", new_book_path(title: @query), class: "btn btn-outline-secondary" %>
    <% end %>
  <% end %>
</div>
